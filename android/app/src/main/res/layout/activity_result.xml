<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ratioSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ratio Size: "
            android:layout_marginTop="250dp"
            android:layout_marginBottom="35dp"
            android:textAlignment="center"
            android:textSize="50px" />


        <TextView
            android:id="@+id/averageResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Average Ratio: "
            android:layout_marginTop="300dp"
            android:layout_marginBottom="35dp"
            android:textAlignment="center"
            android:textSize="50px" />

        <TextView
            android:id="@+id/minimumResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Minimum Ratio: "
            android:layout_marginTop="350dp"
            android:layout_marginBottom="35dp"
            android:textAlignment="center"
            android:textSize="50px" />


        <TextView
            android:id="@+id/maximumResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maximum Ratio: "
            android:layout_marginTop="400dp"
            android:layout_marginBottom="35dp"
            android:textAlignment="center"
            android:textSize="50px" />

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/restartButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="250dp"
                android:text="Restart"
                android:onClick="callStartActivity"/>
        </LinearLayout>

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>